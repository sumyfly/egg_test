{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "checkJs": true,
    "noEmit": false,
    "experimentalDecorators": true,
    "jsx": "react-native",
    "lib": [
      "es2017",
      "es2016",
      "dom"
    ],
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "./app/",
    "preserveConstEnums": true,
    "pretty": true,
    "removeComments": true,
    "rootDir": "./tsrc",
    "sourceMap": false,
    "module": "commonjs",
    "target": "es2017",
    //http://stackoverflow.com/questions/40222162/typescript-2-custom-typings-for-untyped-npm-module
    "typeRoots": [
      "node_modules/@types",
      "node_modules/immutable/dist/immutable.d.ts",
      "node_modules/moment/moment.d.ts",
      "typings"
    ]
  },
  "include": [
    "tsrc/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}